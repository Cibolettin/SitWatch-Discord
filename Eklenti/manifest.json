{
    "manifest_version": 3,
    "name": "Sitwatch to Discord",
    "version": "1.0",
    "icons": {
        "48": "icons/logo.png"
    },
    "description": "Sitwatch.net'te izlenen videoyu Discord durumunda g√∂sterir.",
    "permissions": [
        "identity",
        "tabs",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://sitwatch.net/*",
        "http://localhost:3000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://sitwatch.net/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}